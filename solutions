            <h2 class="text-2xl md:text-3xl font-bold text-center mb-2">Distribution of Capabilities by Domain</h2>
            <p class="text-center text-gray-600 mb-8">This chart illustrates the proportion of key functional areas within each primary domain.</p>
            <div class="chart-container">
                <canvas id="capabilitiesChart"></canvas>
            </div>
        </section>

        <section>
            <h2 class="text-2xl md:text-3xl font-bold text-center mb-12">Detailed Domain Breakdown</h2>
            <div id="capabilities-grid" class="grid grid-cols-1 md:grid-cols-2 gap-8">
            </div>
        </section>

    </div>

    <script>
        const infographicData = {
            "Customer Account Security": {
                "Sign-up protection": null,
                "Sign-in protection": { "üìù Note": "IRIS and IRIS decomposition in future" },
                "Customer Interaction Security": null,
                "High Risk Interactions": null,
                "Customer Security Portal": null,
                "Customer account security intelligence": null
            },
            "Product Abuse": {
                "Abuse Signal Gathering": null,
                "Product Abuse Mitigation By Design": null,
                "Third Party Developer Ecosystem Abuse": null,
                "Campaign Safety": {
                    "Campaign Content Safety": null,
                    "Campaign Abuse and Risk Prevention": null,
                    "Legacy MC": null
                },
                "Customer correspondes content safety": null,
                "AI Interaction Content Safety": {
                    "Customer to AI": null,
                    "AI to AI": null
                },
                "Ecosystem abuse prevention": { "üìù Note": "sms pumping, Add FI, wallet" },
                "Product abuse intelligence": null
            },
            "Customer verification": {
                "Negative Entity Continuous Screening": null,
                "Regulatory Screening": {
                    "OFAC Screening": null,
                    "PEP Screening": null,
                    "FinCEN screening": null,
                    "Regulatory screening intelligence": null
                }
            },
            "Tax Fraud": {
                "Tax Filing Fraud": null,
                "Trusted Auth": null,
                "Tax Fraud intelligence": null
            }
        };

        function createNestedList(data) {
            let html = '<ul class="list-disc list-inside text-gray-600 mt-1 pl-2 space-y-1">';
            for (const key in data) {
                html += `<li>${key}`;
                if (typeof data[key] === 'object' && data[key] !== null) {
                    html += createNestedList(data[key]);
                } else if (data[key] !== null) {
                    html += `<span class="text-xs text-gray-500 ml-2">${data[key]}</span>`;
                }
                if (key.startsWith("üìù Note")) {
                    html = html.replace(`<li>${key}`, `<li class="list-none text-xs bg-blue-50 border border-blue-200 text-blue-800 rounded p-2 mt-1">${key.replace(/üìù\s*/, '')}`);
                }
                html += '</li>';
            }
            html += '</ul>';
            return html;
        }

        document.addEventListener('DOMContentLoaded', () => {
            const grid = document.getElementById('capabilities-grid');
            const chartLabels = Object.keys(infographicData);
            const chartData = chartLabels.map(key => Object.keys(infographicData[key]).length);
            const chartColors = ['#003f5c', '#7a5195', '#ef5675', '#ffa600'];
            
            let colorIndex = 0;
            for (const h1 in infographicData) {
                let cardHtml = `<div class="card p-6">
                                <h3 class="text-xl font-bold mb-4" style="color: ${chartColors[colorIndex % chartColors.length]};">${h1}</h3>
                                <div class="card-content">`;
                cardHtml += createNestedList(infographicData[h1]);
                cardHtml += `</div></div>`;
                grid.innerHTML += cardHtml;
                colorIndex++;
            }

            const processLabel = (label) => {
                if (label.length > 16) {
                    const words = label.split(' ');
                    let lines = [];
                    let currentLine = '';
                    for (const word of words) {
                        if ((currentLine + ' ' + word).trim().length > 16 && currentLine.length > 0) {
                            lines.push(currentLine);
                            currentLine = word;
                        } else {
                            currentLine = currentLine ? currentLine + ' ' + word : word;
                        }
                    }
                    lines.push(currentLine);
                    return lines;
                }
                return label;
            };

            const processedLabels = chartLabels.map(processLabel);

            const ctx = document.getElementById('capabilitiesChart').getContext('2d');
            const capabilitiesChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: processedLabels,
                    datasets: [{
                        label: 'Functional Areas',
                        data: chartData,
                        backgroundColor: chartColors,
                        borderColor: '#ffffff',
                        borderWidth: 3,
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                font: { size: 12, family: "'Inter', sans-serif" },
                                boxWidth: 15, padding: 20
                            }
                        },
                        tooltip: {
                            enabled: true,
                            callbacks: {
                                title: function(tooltipItems) {
                                    const item = tooltipItems[0];
                                    let label = item.chart.data.labels[item.dataIndex];
                                    if (Array.isArray(label)) {
                                      return label.join(' ');
                                    }
                                    return label;
                                }
                            },
                            backgroundColor: '#333', titleFont: { size: 14 }, bodyFont: { size: 12 }, padding: 10, cornerRadius: 4
                        }
                    }
                }
            });
        });
    </script>
</body>
